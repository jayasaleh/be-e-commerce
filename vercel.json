{
    "$schema": "http://openapi.vercel.sh/vercel.json",
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.4",
            "memory": 512,
            "maxDuration": 30
        }
    },
    "version": 2,
    "buildCommand": "composer run vercel",
    "rewrites": [{ "source": "/(.*)", "destination": "api/index.php" }]
}
